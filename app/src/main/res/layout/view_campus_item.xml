<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/campus_image_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_buttom">

    <ImageView
        android:src="@drawable/ic_campus_cancun"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_campus"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/black_50"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_anahuac_cancun"
            android:layout_gravity="center|bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_title"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_default"
            android:id="@+id/tv_campus_name"
            android:textAlignment="center"
            />


    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/gl_buttom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_view_more"
        app:layout_constraintTop_toTopOf="@id/btn_view_more"
        />

    <Button
        android:id="@+id/btn_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver mÃ¡s"
        android:backgroundTint="@color/anahuac_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>