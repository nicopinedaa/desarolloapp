<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    tools:ignore="ExtraText">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_h20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_h40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_h60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        tools:ignore="DuplicateIds" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hgl_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hgl_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hgl_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hgl_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test 1"
        app:layout_constraintTop_toTopOf="@+id/gl_h40"
        app:layout_constraintBottom_toTopOf="@+id/gl_h60"
        app:layout_constraintStart_toEndOf="@id/hgl_60"
        app:layout_constraintEnd_toStartOf="@id/hgl_80"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test 2"
        app:layout_constraintTop_toTopOf="@+id/gl_h40"
        app:layout_constraintBottom_toTopOf="@+id/gl_h60"
        app:layout_constraintStart_toEndOf="@id/hgl_60"
        app:layout_constraintEnd_toStartOf="@id/hgl_80"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test 3"
        app:layout_constraintTop_toBottomOf="@id/gl_h40"
        app:layout_constraintBottom_toBottomOf="@id/hgl_40"
        app:layout_constraintStart_toStartOf="@id/hgl_40"
        app:layout_constraintEnd_toStartOf="@+id/gl_h40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test 4"
            app:layout_constraintTop_toBottomOf="@id/gl_h40"
            app:layout_constraintBottom_toBottomOf="@id/hgl_40"
            app:layout_constraintStart_toStartOf="@id/hgl_40"
            app:layout_constraintEnd_toStartOf="@+id/gl_h40"/>



</androidx.constraintlayout.widget.ConstraintLayout>